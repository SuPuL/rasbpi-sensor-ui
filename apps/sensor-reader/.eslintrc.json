{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*", "bin", "dist"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "rules": {
                "@typescript-eslint/ban-ts-comment": { "ts-ignore": "allow-with-description" }
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        }
    ]
}
